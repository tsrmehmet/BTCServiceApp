@model UserModel
@{
    ViewData["Title"] = "Kullanıcı";
    ViewData["Subtitle"] = "Detay";
}


<div class="card">
    <div class="card-header bg-light header-elements-inline">
        <h6 class="card-title">Kullanıcı Detay</h6>
    </div>
    <div class="card-body">
        <form asp-controller="User" asp-action="Update" method="post" class="formValidate">
            @Html.HiddenFor(x => x.Id)
            <div class="form-group row">
                <label class="col-form-label text-sm-right font-weight-semibold col-sm-2">Ad</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="FirstName" autocomplete="off" required>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label text-sm-right font-weight-semibold col-sm-2">Soyad</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="LastName" autocomplete="off" required>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label text-sm-right font-weight-semibold col-sm-2">E-Posta</label>
                <div class="col-sm-8">
                    <input type="email" class="form-control" asp-for="Email" autocomplete="off" required>
                </div>
            </div>
            <div class="form-group row">
                <h6 class="col-sm-2">Şifre Değiştir</h6>
            </div>
            <div class="form-group row">
                <label class="col-form-label text-sm-right font-weight-semibold col-sm-2">Yeni Şifre</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" asp-for="Password" autocomplete="new-password">
                </div>
            </div>
            <div class="row text-right">
                <div class="col-lg-10">
                    <button type="submit" class="btn btn-primary">Kaydet<i class="icon-paperplane ml-2"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts {

    <script src="~/assets/js/plugins/forms/styling/uniform.min.js"></script>
    <script src="~/assets/js/plugins/forms/inputs/touchspin.min.js"></script>
    <script src="~/assets/js/plugins/extensions/jquery_ui/widgets.min.js"></script>
    <script src="~/assets/js/plugins/forms/styling/uniform.min.js"></script>
    <script src="~/assets/js/custom.js"></script>

}